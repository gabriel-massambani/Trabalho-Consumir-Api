@model WebAPI.Model.Endereco

<h1>Editar Endereço</h1>

<form method="post">
    <div class="form-group">
        <label for="Rua">Rua:</label>
        <input type="text" class="form-control" id="Rua" name="Rua" value="@Model.Rua" required>
    </div>
    <div class="form-group">
        <label for="Cidade">Cidade:</label>
        <input type="text" class="form-control" id="Cidade" name="Cidade" value="@Model.Cidade" required>
    </div>
    <div class="form-group">
        <label for="Estado">Estado:</label>
        <input type="text" class="form-control" id="Estado" name="Estado" value="@Model.Estado" required>
    </div>
    <div class="form-group">
        <label for="CEP">CEP:</label>
        <input type="text" class="form-control" id="CEP" name="CEP" value="@Model.CEP" required>
    </div>
    <input type="hidden" asp-for="EnderecoId" />
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
